<Window x:Class="UnoWpf.Views.ClientWindow" 
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="Game Client" Height="500" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="700*"/>
            <ColumnDefinition Width="250"/>
            <!-- объединить вторую и третью колонки -->
            <ColumnDefinition Width="50"/>
            <!-- оставить небольшое пространство справа -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель ввода IP и порта -->
        <StackPanel Orientation="Horizontal" Margin="10,10,10,10" Grid.ColumnSpan="3">
            <TextBlock Text="IP:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="IpTextBox" Width="150" Text="127.0.0.1"/>
            <TextBlock Text="Port:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBox x:Name="PortTextBox" Width="80" Text="12345"/>
            <Button Content="Подключиться" Click="Connect_Click" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Список сообщений -->
        <ListBox x:Name="MessageListBox" Grid.Row="1" Margin="10,10,10,10" Grid.ColumnSpan="3"/>

        <!-- Панель для кнопок действий (располагается справа) -->
        <StackPanel x:Name="ActionPanel" Orientation="Vertical" Visibility="Collapsed" Grid.Row="1" Grid.Column="1" Margin="10,10,10,10">
            <TextBlock Text="Выберите действия для 3 ходов:" Margin="0,0,0,10" FontWeight="Bold"/>

            <!-- Ход 1 -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Ход 1" FontWeight="Bold" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Attack -->
                    <Button Content="Attack Top" Grid.Row="0" Grid.Column="0" Click="ActionButton_Click" Tag="attack top" Margin="2"/>
                    <Button Content="Attack Middle" Grid.Row="1" Grid.Column="0" Click="ActionButton_Click" Tag="attack middle" Margin="2"/>
                    <Button Content="Attack Bottom" Grid.Row="2" Grid.Column="0" Click="ActionButton_Click" Tag="attack bottom" Margin="2"/>

                    <!-- Defense -->
                    <Button Content="Defense Top" Grid.Row="0" Grid.Column="1" Click="ActionButton_Click" Tag="defense top" Margin="2"/>
                    <Button Content="Defense Middle" Grid.Row="1" Grid.Column="1" Click="ActionButton_Click" Tag="defense middle" Margin="2"/>
                    <Button Content="Defense Bottom" Grid.Row="2" Grid.Column="1" Click="ActionButton_Click" Tag="defense bottom" Margin="2"/>
                </Grid>
            </StackPanel>

            <!-- Ход 2 -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Ход 2" FontWeight="Bold" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Attack -->
                    <Button Content="Attack Top" Grid.Row="0" Grid.Column="0" Click="ActionButton_Click" Tag="attack top" Margin="2"/>
                    <Button Content="Attack Middle" Grid.Row="1" Grid.Column="0" Click="ActionButton_Click" Tag="attack middle" Margin="2"/>
                    <Button Content="Attack Bottom" Grid.Row="2" Grid.Column="0" Click="ActionButton_Click" Tag="attack bottom" Margin="2"/>

                    <!-- Defense -->
                    <Button Content="Defense Top" Grid.Row="0" Grid.Column="1" Click="ActionButton_Click" Tag="defense top" Margin="2"/>
                    <Button Content="Defense Middle" Grid.Row="1" Grid.Column="1" Click="ActionButton_Click" Tag="defense middle" Margin="2"/>
                    <Button Content="Defense Bottom" Grid.Row="2" Grid.Column="1" Click="ActionButton_Click" Tag="defense bottom" Margin="2"/>
                </Grid>
            </StackPanel>

            <!-- Ход 3 -->
            <StackPanel>
                <TextBlock Text="Ход 3" FontWeight="Bold" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Attack -->
                    <Button Content="Attack Top" Grid.Row="0" Grid.Column="0" Click="ActionButton_Click" Tag="attack top" Margin="2"/>
                    <Button Content="Attack Middle" Grid.Row="1" Grid.Column="0" Click="ActionButton_Click" Tag="attack middle" Margin="2"/>
                    <Button Content="Attack Bottom" Grid.Row="2" Grid.Column="0" Click="ActionButton_Click" Tag="attack bottom" Margin="2"/>

                    <!-- Defense -->
                    <Button Content="Defense Top" Grid.Row="0" Grid.Column="1" Click="ActionButton_Click" Tag="defense top" Margin="2"/>
                    <Button Content="Defense Middle" Grid.Row="1" Grid.Column="1" Click="ActionButton_Click" Tag="defense middle" Margin="2"/>
                    <Button Content="Defense Bottom" Grid.Row="2" Grid.Column="1" Click="ActionButton_Click" Tag="defense bottom" Margin="2"/>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
