<Window x:Class="UnoWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Server" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="IP:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <!-- Здесь должно быть имя, которое вы используете в C# -->
            <TextBox x:Name="IpTextBox" Width="150" Text="127.0.0.1"/>
            <TextBlock Text="Port:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBox x:Name="PortTextBox" Width="80" Text="12345"/>
            <Button Content="Запустить сервер" Click="StartServer_Click" Margin="10,0,5,0"/>
            <Button Content="Открыть клиент" Click="OpenClientWindow_Click" Width="200"/>
        </StackPanel>
        <ListBox x:Name="LogListBox" Grid.Row="1" Margin="10" />
    </Grid>
</Window>
